        <DataTemplate.Triggers>
            <Trigger Property="pfComponentModel:DesignerProperties.IsInDesignMode" Value="True">
                <Setter TargetName="StatusEffectsControl" Property="ItemsSource" Value="{Binding StatusEffects}" />
